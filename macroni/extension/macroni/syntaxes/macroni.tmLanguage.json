{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Macroni",
  "scopeName": "source.macroni",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#built-in-functions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.macroni",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.macroni",
          "match": "\\b(if|else|while|fn|outer)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.macroni",
          "match": "\\b(null|true|false)\\b"
        }
      ]
    },
    "function-definition": {
      "begin": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "end": "\\)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.macroni"
        },
        "2": {
          "name": "entity.name.function.macroni"
        }
      },
      "patterns": [
        {
          "name": "variable.parameter.macroni",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "punctuation.separator.parameter.macroni",
          "match": ","
        }
      ]
    },
    "built-in-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.macroni",
          "match": "@(print|wait|rand|rand_i|foreach_tick|mouse_move|set_template_dir|find_template|find_templates|get_coordinates|check_pixel_color|get_pixel_color|left_click|send_input|press_and_release|record|playback|recording_exists|len|time|shuffle|get_pixel_at|append|pop|capture_region|ocr_find_text|swap|copy)\\b"
        }
      ]
    },
    "function-call": {
      "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "end": "\\)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.macroni"
        }
      },
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#numbers"
        },
        {
          "include": "#constants"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#built-in-functions"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#variables"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.macroni",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.macroni",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.macroni",
          "match": "\\b([0-9]+\\.?[0-9]*|\\.[0-9]+)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.macroni",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.macroni",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.macroni",
          "match": "="
        },
        {
          "name": "punctuation.accessor.macroni",
          "match": "\\[|\\]"
        },
        {
          "name": "punctuation.separator.macroni",
          "match": ","
        },
        {
          "name": "punctuation.terminator.statement.macroni",
          "match": ";"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.macroni",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
